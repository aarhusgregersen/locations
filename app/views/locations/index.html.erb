<p id="notice"><%= notice %></p>

<div class="col-md-6 col-sm-12">
  <h1>Locations</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= location.address %></td>
          <td><%= link_to 'Show', location %></td>
          <td><%= link_to 'Edit', edit_location_path(location) %></td>
          <td><%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
        <tr>
        <%= form_for(@location) do |f| %>
          <td><%= f.text_field :address %></td>
          <td><%= f.submit "Submit New Location", :class => "btn btn-success" %></td>
        </tr>
    </tbody>
  </table>

  <% end %>
  <%#= link_to 'New Location', new_location_path, class: "btn btn-large btn-primary" %>
</div>

<div class="col-sm-12 col-md-6">
  <%= render 'locations/map_holder' %>
</div>
<br>




<script src="//maps.google.com/maps/api/js?key=AIzaSyByqOXUPEjWbtJzJnWNpl6NCdkGA7DZ-Vg"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
